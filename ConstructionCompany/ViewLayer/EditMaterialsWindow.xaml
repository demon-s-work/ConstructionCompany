<Window x:Class="StaemDatabaseApp.ViewLayer.EditMaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaemDatabaseApp.ViewLayer"
        mc:Ignorable="d"
        Title="Edit Materials"
        Height="340" Width="360.0">
    <Grid>
        <Label Content="New Materials data"
               HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="35" Margin="10,10,0,0" VerticalAlignment="Top" Width="334" FontSize="18" FontWeight="SemiBold" TextOptions.TextFormattingMode="Display"/>
        <Grid HorizontalAlignment="Left" Height="190" Margin="30,50,0,0" VerticalAlignment="Top" Width="294">
            <Label Content="Title:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="24" Margin="11,14,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBox x:Name="MaterialsTitleTextBox" HorizontalAlignment="Left" Height="20" Margin="116,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" />
            <Label Content="Unit:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="24" Margin="11,39,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBox x:Name="MaterialsUnitTextBox" HorizontalAlignment="Left" Height="20" Margin="116,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
            <Label Content="Price:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="24" Margin="11,81,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBox x:Name="MaterialsPriceTextBox" HorizontalAlignment="Left" Height="20" Margin="116,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
            <Label Content="StockQuantity:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="33" Margin="11,106,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBox x:Name="MaterialsStockQuantityTextBox" HorizontalAlignment="Left" Height="20" Margin="116,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        </Grid>
        <Button x:Name="addButton" Content="Edit" Height="31" Margin="110,257,109.6,0" VerticalAlignment="Top" Click="addButton_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
