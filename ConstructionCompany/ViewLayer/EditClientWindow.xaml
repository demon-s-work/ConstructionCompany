<Window x:Class="StaemDatabaseApp.ViewLayer.EditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaemDatabaseApp.ViewLayer"
        mc:Ignorable="d"
        Title="Edit client" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Edit client data"
               HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="35" Margin="10,10,0,0"
               VerticalAlignment="Top" Width="334" FontSize="18" FontWeight="SemiBold"
               TextOptions.TextFormattingMode="Display" />
        <Grid HorizontalAlignment="Left" Height="140" Margin="30,50,0,0" VerticalAlignment="Top" Width="294">
            <TextBox x:Name="clientNameTextBox" HorizontalAlignment="Left" Height="20" Margin="116,18,0,0"
                     TextWrapping="Wrap" VerticalAlignment="Top" Width="168" />
            <Label Content="Phone:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="24"
                   Margin="11,39,0,0" VerticalAlignment="Top" Width="100" />
            <TextBox x:Name="clientPhoneTextBox" HorizontalAlignment="Left" Height="20" Margin="116,43,0,0"
                     TextWrapping="Wrap" VerticalAlignment="Top" Width="168" />
            <Label Content="FullName:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="24"
                   Margin="11,14,0,0" VerticalAlignment="Top" Width="100" />
            <Label Content="Email:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="24"
                   Margin="11,81,0,0" VerticalAlignment="Top" Width="100" />
            <TextBox x:Name="clientEmailTextBox" HorizontalAlignment="Left" Height="20" Margin="116,85,0,0"
                     TextWrapping="Wrap" VerticalAlignment="Top" Width="168" />
            <Label Content="Address:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="33"
                   Margin="11,106,0,0" VerticalAlignment="Top" Width="100" />
            <TextBox x:Name="clientAddressTextBox" HorizontalAlignment="Left" Height="20" Margin="116,110,0,0"
                     TextWrapping="Wrap" VerticalAlignment="Top" Width="168" />
        </Grid>
        <Button x:Name="applyButton" Content="Apply" Height="31" Margin="110,207,109.6,0" VerticalAlignment="Top"
                Click="applyButton_Click" Grid.ColumnSpan="2" />

    </Grid>
</Window>